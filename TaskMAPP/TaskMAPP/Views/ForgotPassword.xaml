<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMAPP.Views.ForgotPassword">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource mainstack}" VerticalOptions="Center">
            <Label 
                Text="Enter Email to Reset Password"
                FontSize="30"
                HorizontalOptions="CenterAndExpand"
                Margin="0,0,0,20"
                TextColor="DarkCyan"/>


            <Entry 
                    x:Name="EntryUserEmail"
                    Placeholder="Email">
            </Entry>

            <Button x:Name="ForgotPassbtn"
               
                    Text="Reset Password"
                    Clicked="ForgotPassbtn_Clicked"
                    HeightRequest="54"
                    BackgroundColor="DodgerBlue"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>